@model SistemaEduEscola.Models.Unidade

@{
    ViewData["Title"] = "Editar";
}


<h4 style="margin-top:100px">Editar Unidade</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="NomeUnidade" class="control-label"></label>
                <input asp-for="NomeUnidade" class="form-control" />
                <span asp-validation-for="NomeUnidade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Enderoco" class="control-label"></label>
                <input asp-for="Enderoco" class="form-control" />
                <span asp-validation-for="Enderoco" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="QtdAlunos" class="control-label"></label>
                <input asp-for="QtdAlunos" class="form-control" />
                <span asp-validation-for="QtdAlunos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QtdTurmas" class="control-label"></label>
                <input asp-for="QtdTurmas" class="form-control" />
                <span asp-validation-for="QtdTurmas" class="text-danger"></span>
            </div>
       </form>
    </div>
</div>

<div>
    <input type="submit" value="Salvar" class="btn btn-dark" /> |
    <a class="btn btn-dark" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
