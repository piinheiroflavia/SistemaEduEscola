@model SistemaEduEscola.Models.Materia

@{
    ViewData["Title"] = "Editar";
}

<h1>Edit</h1>

<h4 style="margin-top:100px">Editar Matéria</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeMateria" class="control-label"></label>
                <input asp-for="NomeMateria" class="form-control" />
                <span asp-validation-for="NomeMateria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Professor" class="control-label"></label>
                <input asp-for="Professor" class="form-control" />
                <span asp-validation-for="Professor" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="TurmaId" class="control-label"></label>
                <input asp-for="TurmaId" class="form-control" />
                <span asp-validation-for="TurmaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadeId" class="control-label"></label>
                @*SELECT*@
                <select asp-for="UnidadeId" class="form-control" asp-items="ViewBag.UnidadeId"></select>
                <span asp-validation-for="UnidadeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

